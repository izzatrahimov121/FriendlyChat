@model UserProfilViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<selection class="discussionsN">

    <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post">
        <a asp-action="Login" asp-controller="Auth" class="btn btn-light" style="margin-top:10px;">Login Page</a>
        <button type="submit" class="btn btn-light" style="margin-top:10px;">Logout</button>
    </form>

    <div class="row py-5 px-4">
        <div class="col-md-8 mx-auto">
            <!-- Profile widget -->
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <div class="profile mr-3">
                            <img src="./assets/images/@Model.Photo"
                                 onclick="Modal('@Model.Photo')" width="130" class="rounded mb-2 img-thumbnail">
                            <a id="editProfil" class="btn btn-outline-dark btn-sm btn-block">Edit profile</a>
                        </div>
                        <div class="media-body mb-5 text-white">
                            <h4 class="mt-0 mb-0">@Model.Username</h4>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="bg-light p-4 d-flex justify-content-end text-center">
                    <ul class="list-inline mb-0">
                        <li id="Followers" class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">@Model.Followers</h5>
                            <small class="text-muted">
                                <i class="fas fa-user mr-1"></i>Followers
                            </small>
                        </li>
                        <li class="list-inline-item">
                            <br />
                        </li>
                        <li class="list-inline-item">
                            <br />
                        </li>
                        <li class="list-inline-item">
                            <br />
                        </li>
                        <li id="Following" class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">@Model.Following</h5>
                            <small class="text-muted">
                                <i class="fas fa-user mr-1"></i>Following
                            </small>
                        </li>
                    </ul>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:10px;"></div>
            </div>
            <form id="editform" method="post" enctype="multipart/form-data" style="background-color:azure; margin-top:40px; display:none">
                <div style="margin-left:20px;margin-right:20px;">
                    <div class="form-group">
                        <label style="margin-top:5px;display: flex; flex-direction: row-reverse;"><i id="closeform" class="fa-solid fa-square-xmark fa-beat fa-2xl"></i></label>
                        <label for="usernameinput">User Name</label>
                        <input type="text" asp-for="Username" class="form-control" id="usernameinput" value="@Model.Username" placeholder="Enter new user name" disabled>
                    </div>
                    <div class="form-group">
                        <label for="emailinput">Email address</label>
                        <input asp-for="Email" type="email" class="form-control" id="emailinput" value="@Model.Email" aria-describedby="emailHelp" disabled placeholder="Enter new email">
                    </div>
                    <div class="form-group">
                        <label for="photoinput">Photo</label>
                        <input type="file" asp-for="Image" class="form-control" id="photoinput" disabled placeholder="Change profil photo">
                    </div>
                    <a style="margin-bottom:10px;" id="changeinfo" class="btn btn-danger">Change information</a>
                    <button style="margin-bottom:10px;" type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>

            <div id="followList" style="margin-top:40px; display:none">
                <label style="margin-top:5px;display: flex; flex-direction: row-reverse;"><i id="closefollowlist" style="z-index:33;" class="fa-solid fa-square-xmark fa-beat fa-2xl"></i></label>
                <ul id="follogingList" class="list-group list-group-light">
                </ul>
            </div>
        </div>
    </div>
</selection>

